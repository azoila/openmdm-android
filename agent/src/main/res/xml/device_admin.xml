<?xml version="1.0" encoding="utf-8"?>
<device-admin xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-policies>
        <!-- Lock screen password policies -->
        <limit-password />
        <watch-login />
        <reset-password />

        <!-- Device security -->
        <force-lock />
        <wipe-data />
        <expire-password />
        <encrypted-storage />

        <!-- Device restrictions -->
        <disable-camera />
        <disable-keyguard-features />
    </uses-policies>
</device-admin>
